
@{
    Layout = null;
}

<!DOCTYPE html>


<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,900;1,100;1,300;1,400;1,500&family=Sen:wght@400;700;800&display=swap" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://kit.fontawesome.com/1f221b598e.js" crossorigin="anonymous"></script>

<style>
    .background {
        background: url('/Yeniklasör/software_shutterstock_1290773869-1024x576.jpg') no-repeat center center;
        background-size: cover;
        height: 150vh;
        justify-content: center;
        align-items: center;
        color: black;
        text-align: center;
        position: relative; /* Mutlaka pozisyon belirtin */
    }

        .background::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: black; /* Arkaplan rengi */
            opacity: 0.4; /* Şeffaflık değeri (0 ile 1 arasında olmalı) */
        }

        /* Metni beyaz olarak ayarlamak için */
        .background p, .background h1, .background h2, .background h3 {
            color: white;
        }
</style>

<body>

    <div id="wrapper">

        <div id="page-wrapper" style="background-color:black">
            @await Html.PartialAsync("Navbar")

            @await Html.PartialAsync("Top")
            <div class="background">
                @RenderBody()
            </div>

            <div style="margin-top:100px">

            @await Html.PartialAsync("Iletisim")
            </div>

        </div>
    </div>




</body>

</html>
