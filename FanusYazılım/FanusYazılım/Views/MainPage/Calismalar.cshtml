            </div>


            <div class="button-container" style="text-align:center;padding:20px">
                <button onclick="loadMoreMovies()" class="load-more-button">
                    Daha Fazla Yükle
                </button>
            </div>

        </div>
    </div>

</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadMoreMovies() {
        $.ajax({
            url: '@Url.Action("GetAllItems", "MainPage")',
            type: 'GET',
            success: function (response) {
                $('#popular').html(response);

            },
            error: function (xhr, status, error) {
                console.log('Yükleme hatası: ' + error);
            }
        });
    }
</script>




